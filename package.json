{
  "name": "knights-tour-game",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@headlessui/react": "1.4.2",
    "@heroicons/react": "1.0.5",
    "@types/tailwindcss": "2.2.4",
    "@xstate/react": "1.6.3",
    "chessground": "7.12.0",
    "classnames": "2.3.1",
    "framer-motion": "4.1.17",
    "immutable": "*",
    "preval.macro": "5.0.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-use": "17.3.1",
    "runtypes": "6.5.0",
    "web-vitals": "2.1.2",
    "xstate": "4.26.1"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "prebuild": "npm run check && npm test -- --watchAll=false",
    "test": "craco test",
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "check": "npm run check:types && npm run check:lint",
    "check:types": "tsc --noEmit",
    "check:lint": "eslint --cache --ignore-path .gitignore . --ext ts --ext tsx --ext js --ext jsx",
    "check:lint:fix": "npm run check:lint -- --fix"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:import/recommended",
      "plugin:import/typescript"
    ],
    "rules": {
      "import/order": [
        "error",
        {
          "alphabetize": {
            "order": "asc"
          }
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@craco/craco": "6.4.2",
    "@testing-library/jest-dom": "5.16.0",
    "@testing-library/react": "12.1.2",
    "@testing-library/react-hooks": "7.0.2",
    "@testing-library/user-event": "13.5.0",
    "@types/jest": "27.0.3",
    "@types/node": "16.11.11",
    "@types/preval.macro": "3.0.0",
    "@types/react": "17.0.37",
    "@types/react-dom": "17.0.11",
    "@xstate/inspect": "0.5.2",
    "autoprefixer": "9.8.8",
    "eslint-plugin-import": "2.25.3",
    "fast-check": "2.20.0",
    "husky": "7.0.4",
    "lint-staged": "12.1.2",
    "mockdate": "3.0.5",
    "postcss": "7.0.39",
    "prettier": "2.5.1",
    "react-scripts": "4.0.3",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@2.2.17",
    "typescript": "4.5.2",
    "wait-for-expect": "3.0.2"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": false
  }
}
