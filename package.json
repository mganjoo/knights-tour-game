{
  "name": "knights-tour-game",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@headlessui/react": "1.4.2",
    "@heroicons/react": "1.0.5",
    "@types/tailwindcss": "2.2.4",
    "@xstate/react": "1.6.3",
    "chessground": "7.11.1",
    "classnames": "2.3.1",
    "framer-motion": "5.4.5",
    "immutable": "4.0.0",
    "preval.macro": "5.0.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-use": "17.3.1",
    "runtypes": "6.5.0",
    "web-vitals": "2.1.2",
    "xstate": "4.26.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.16.1",
    "@testing-library/react": "12.1.2",
    "@testing-library/react-hooks": "7.0.2",
    "@testing-library/user-event": "13.5.0",
    "@types/jest": "27.0.3",
    "@types/node": "16.11.12",
    "@types/preval.macro": "3.0.0",
    "@types/react": "17.0.37",
    "@types/react-dom": "17.0.11",
    "@xstate/inspect": "0.5.2",
    "autoprefixer": "10.4.0",
    "cypress": "9.1.1",
    "cypress-real-events": "1.6.0",
    "eslint-plugin-cypress": "2.12.1",
    "eslint-plugin-import": "2.25.3",
    "fast-check": "2.20.0",
    "husky": "7.0.4",
    "lint-staged": "12.1.2",
    "mockdate": "3.0.5",
    "postcss": "8.4.5",
    "prettier": "2.5.1",
    "react-scripts": "5.0.0",
    "tailwindcss": "3.0.2",
    "typescript": "4.5.4",
    "wait-for-expect": "3.0.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "inspect": "REACT_APP_INSPECT_XSTATE=1 npm run start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "prepare": "husky install",
    "format": "prettier --write .",
    "check": "npm run check:types && npm run check:lint",
    "check:types": "tsc --noEmit",
    "check:lint": "eslint --cache --ignore-path .gitignore . --ext ts --ext tsx --ext js --ext jsx",
    "check:lint:fix": "npm run check:lint -- --fix",
    "cy:open": "cypress open",
    "cy:run": "cypress run"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:import/recommended",
      "plugin:import/typescript"
    ],
    "rules": {
      "import/order": [
        "error",
        {
          "alphabetize": {
            "order": "asc"
          }
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,scss,md,yml}": [
      "prettier --write"
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --ignore-path .gitignore --fix"
    ]
  },
  "prettier": {
    "semi": false,
    "proseWrap": "always"
  }
}
