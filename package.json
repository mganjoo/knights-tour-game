{
  "name": "knights-tour-game",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@headlessui/react": "^1.1.1",
    "@heroicons/react": "^1.0.1",
    "@types/tailwindcss": "^2.0.2",
    "@xstate/react": "^1.3.3",
    "chessground": "^7.11.1",
    "classnames": "^2.3.1",
    "framer-motion": "^4.1.11",
    "immutable": "*",
    "preval.macro": "^5.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-use": "^17.2.4",
    "runtypes": "^6.3.0",
    "web-vitals": "^1.1.1",
    "xstate": "^4.19.1"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "prebuild": "npm test -- --watchAll=false",
    "test": "craco test",
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "check": "npm run check:types && npm run check:lint",
    "check:types": "tsc --noEmit",
    "check:lint": "eslint --cache --ignore-path .gitignore . --ext ts --ext tsx --ext js --ext jsx",
    "check:lint:fix": "npm run check:lint -- --fix"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:import/recommended",
      "plugin:import/typescript"
    ],
    "rules": {
      "import/order": [
        "error",
        {
          "alphabetize": {
            "order": "asc"
          }
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@craco/craco": "^6.1.1",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.5",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.0",
    "@types/preval.macro": "^3.0.0",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.3",
    "@xstate/inspect": "^0.4.1",
    "autoprefixer": "^9.8.6",
    "eslint-plugin-import": "^2.22.1",
    "fast-check": "^2.14.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "postcss": "^7.0.35",
    "prettier": "^2.2.1",
    "react-scripts": "^4.0.3",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.1.2",
    "typescript": "^4.2.4"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": false
  }
}
